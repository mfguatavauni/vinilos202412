<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="bandDetail" type="com.japago.vinilosmusic202412.data.model.Band"/>
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/band_image"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:imageUrl="@{bandDetail.image}"
                android:contentDescription="@string/ivband_image"
                android:layout_margin="20dp"/>

            <TextView
                android:id="@+id/tvLabelName"
                android:layout_alignParentStart="true"
                android:layout_below="@id/band_image"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Nombre:"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tvName"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/band_image"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="@{bandDetail.name}"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tvLabelDate"
                android:layout_alignParentStart="true"
                android:layout_below="@id/tvLabelName"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Fecha:"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tvDate"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/tvName"
                android:paddingTop="3dp"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="@{bandDetail.creationDate}"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tvLabelDescription"
                android:layout_alignParentStart="true"
                android:layout_below="@id/tvLabelDate"
                android:paddingTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="DescripciÃ³n:"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tvDescription"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{bandDetail.description}"
                android:layout_below="@id/tvLabelDescription"
                android:paddingTop="3dp"
                android:layout_margin="20dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="20sp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</layout>