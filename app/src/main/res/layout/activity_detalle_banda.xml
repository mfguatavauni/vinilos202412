<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <Button
        android:id="@+id/btnRegresarCatalogoAlbumes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/primary"
        android:text="@string/btnReturn"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:elevation="4dp"/>

    <ImageView
        android:id="@+id/band_image"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnRegresarCatalogoAlbumes"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:contentDescription="@string/ivband_image"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/tvLabelName"
        android:layout_alignParentStart="true"
        android:layout_below="@id/band_image"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Nombre:"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tvName"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/band_image"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@{band.name}"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tvLabelDate"
        android:layout_alignParentStart="true"
        android:layout_below="@id/tvLabelName"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Fecha:"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tvDate"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/tvName"
        android:paddingTop="3dp"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="@{band.name}"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tvLabelDescription"
        android:layout_alignParentStart="true"
        android:layout_below="@id/tvLabelDate"
        android:paddingTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="DescripciÃ³n:"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tvDescription"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvLabelDescription"
        android:paddingTop="3dp"
        android:layout_margin="20dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="20sp"/>

</RelativeLayout>